}

.apps {
  img {
    border-radius: 20%;
    height: 110px;
    margin-right:10px;
    margin-top: 10px;
    margin-bottom: 10px;
    &.inactive {
      opacity: 0.2;
    }
  }
}

.big {
  padding: 0 20px;
  font-size: 5em;
  line-height: 1em;
}

.center {
  text-align: center;
}

.actions {
  margin-top: 300px;
  span {
    background: #e9e9e9;
    padding: 40px 30px; 
    border-radius: 100%;
  }
  .not {
    padding: 60px 30px;
  }
}
